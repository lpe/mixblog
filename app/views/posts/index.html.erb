<h1>Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Created At</th>
    <th></th>
  </tr>
   <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
       <td><%= post.user.name %></td>
       <td><%= post.created_at %></td>
       <td> <%= link_to "Show", post_path(post)  %></td>
    </tr>
  <% end %>
</table>

  <% if session[:current_user] %>
    <%= link_to "Create your own post", new_post_path %>
    <%= link_to "Logout", logins_path, data: { "turbo-method": :delete }  %>
  <% else %>
    <div>Want to add posts or edit yours ? Please <%= link_to "Sign In", new_logins_path %></p>
  <% end %>
