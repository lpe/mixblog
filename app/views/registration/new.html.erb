<h1>Sign Up</h1>

<%= form_with model: @user, url: registration_index_path do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
     <%= form.password_field :password %>
  </div>
  <div>
    <%=  form.submit "Sign Up" %>
  </div>
<% end %>